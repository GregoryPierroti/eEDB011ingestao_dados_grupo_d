# dbt/sqlfluff/.sqlfluff
[sqlfluff]
dialect = postgres
templater = dbt
exclude_rules = L009  # exemplo: evitar algumas regras (opcional)

[sqlfluff:templater:dbt]
project_dir = /app
profiles_dir = /root/.dbt

# Exemplo de tunning de regras (opcional)
[sqlfluff:rules]
max_line_length = 120
indent_unit = space
tab_space_size = 2
